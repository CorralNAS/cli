# Common functions for all the tests

function maybe_barf(flag, test, str) {
	if (flag != true) {
		printf("ERROR %s in %s\n", str, test)
		if (_exit_on_err == true) {
			exit
		}
	}
	return not flag
}	

function maybe_die(flag, test, str) {
	if (flag != true) {
		printf("FATAL error %s in %s\n", str, test)
		exit
	}
	return not flag
}	
