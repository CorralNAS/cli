# Common functions for all the tests

function maybe_barf(flag, test, str) {
	if (flag != true) {
		print("ERROR in " + test + " " + str)
		if (_exit_on_err == true) {
			exit
		}
	}
	return flag
}	

function maybe_die(flag, test, str) {
	if (flag != true) {
		print("FATAL: " + test + " " + str)
		exit
	}
	return flag
}	
